%h1 Liste des réservations
%table
  %thread
    %tr
      %th Numéro de réservation
      %th Nom du client
      %th{:colspan => "3"} Actions
  %tbody
    - @reservations.each do |reservation|
      %tr
        %td= reservation.id
        %td= reservation.customer.first_name + " " + reservation.customer.last_name
        %td= link_to 'Voir', admin_reservation_path(reservation)
        %td= link_to 'Modifier', edit_admin_reservation_path(reservation)
        %td= link_to 'Supprimer', admin_reservation_path(reservation), method: :delete
%p
  = link_to 'Nouvelle recherche', search_path

%h1 Liste des factures
%table
  %thread
    %tr
      %th Numéro de facture
      %th Nom du client
      %th Numéro de réservation
      %th{:colspan => "3"} Actions
  %tbody
    - @invoices.each do |invoice|
      %tr
        %td= invoice.id
        %td= invoice.customer.first_name + " " + invoice.customer.last_name
        %td= invoice.reservation_id
        %td= link_to 'Voir', admin_invoice_path(invoice)
        %td= link_to 'Modifier', edit_admin_invoice_path(invoice)
        %td= link_to 'Supprimer', admin_invoice_path(invoice), method: :delete
%p
  = link_to 'Nouvelle facture', new_admin_invoice_path