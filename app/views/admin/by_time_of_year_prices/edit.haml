%div.jumbotron
  %h1.display-4 Modification de prix pour une période
  = form_for @by_time_of_year_price, url: admin_by_time_of_year_prices_path do |f|
    %p
      = f.label :time_desc, "Description"
      %br/
      = f.text_field :time_desc
    %p
      = f.label :fixed_price_variation, "Prix fixe"
      %br/
      = f.text_field :fixed_price_variation
    %p
      = f.label :percent_variation, "Pourcentage"
      %br/
      = f.text_field :percent_variation
    %p
      = f.label :start_date, "Arrivée"
      %br/
      = f.text_field :start_date, class: 'datepicker'
    %p
      = f.label :end_date, "Départ"
      %br/
      = f.text_field :end_date, class: 'datepicker'
    %p
      = f.submit
      %br/
  = link_to 'Retour', admin_change_prices_path