<h1>Modification d'une chambre</h1>

<%= form_for(@room) do |f| %>

  <p>
    <%= f.label :id, 'Numéro de la chambre' %><br/>
    <%= f.text_field :id %>
  </p>

  <p>
    <%= f.label :is_available, 'Disponibilité' %><br/>
    <%= f.text_field :is_available %>
  </p>

  <p>
    <%= f.label :view_id, 'Type de vue' %><br/>
    <%= f.text_field :view_id %>
  </p>

  <p>
    <%= f.label :room_type_id, 'Type de chambre' %><br/>
    <%= f.text_field :room_type_id %>
  </p>

  <p>
    <%= f.submit %><br/>
  </p>

<% end %>
<p>
  <%= link_to 'Retour', rooms_path %>
</p>